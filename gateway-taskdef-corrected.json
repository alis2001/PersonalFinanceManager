{
  "family": "finance-tracker-gateway",
  "networkMode": "awsvpc", 
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::819080195356:role/finance-tracker-task-execution-role",
  "taskRoleArn": "arn:aws:iam::819080195356:role/finance-tracker-task-role",
  "containerDefinitions": [
    {
      "name": "gateway",
      "image": "819080195356.dkr.ecr.eu-south-1.amazonaws.com/finance-tracker/gateway:latest",
      "essential": true,
      "portMappings": [{"containerPort": 3000, "protocol": "tcp"}],
      "environment": [
        {"name": "NODE_ENV", "value": "production"},
        {"name": "PORT", "value": "3000"},
        {"name": "AUTH_SERVICE_URL", "value": "http://10.0.3.214:3000"},
        {"name": "EXPENSE_SERVICE_URL", "value": "http://10.0.4.7:3000"},
        {"name": "INCOME_SERVICE_URL", "value": "http://10.0.3.16:3000"},
        {"name": "CATEGORY_SERVICE_URL", "value": "http://10.0.4.238:3000"},
        {"name": "ANALYTICS_SERVICE_URL", "value": "http://10.0.3.165:8000"},
        {"name": "ENABLE_CORS", "value": "true"},
        {"name": "LOG_LEVEL", "value": "info"}
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/aws/ecs/finance-tracker",
          "awslogs-region": "eu-south-1",
          "awslogs-stream-prefix": "gateway"
        }
      }
    }
  ]
}
