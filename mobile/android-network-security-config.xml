<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for EC2 backend -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="false">35.152.72.82</domain>
    </domain-config>
    
    <!-- Default: Block cleartext for all other domains (security) -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>

